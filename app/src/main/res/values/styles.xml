<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--右侧字母导航控件-->
    <declare-styleable name="IndexBar">
        <attr name="normalColor" format="color"/>
        <attr name="selecColor" format="color"/>
        <attr name="indexSize" format="dimension"/>
    </declare-styleable>

    <style name="dialog_date" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <!--设置header部分显示的颜色-->
        <item name="colorAccent">@color/text_red</item>
    </style>
    <style name="DefaultButton">
        <item name="android:layout_width">188dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/btn_red_orange_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>