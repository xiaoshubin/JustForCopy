<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:padding="12dp"
        android:text="问题类型（单选）"
        android:textColor="@color/titleColor"
        android:textSize="15sp" />

    <com.smallcake.smallutils.custom.AutoNewLineLayout
        app:vertivalSpace="8dp"
        app:horizontalSpace="8dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/auto_new_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:padding="12dp"
        android:text="问题类型（多选）"
        android:textColor="@color/titleColor"
        android:textSize="15sp" />

    <com.smallcake.smallutils.custom.AutoNewLineLayout
        app:vertivalSpace="8dp"
        app:horizontalSpace="8dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/auto_new_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_margin="12dp"
            android:background="@drawable/gray_round6_bg"
            android:gravity="top"
            android:padding="12dp"
            android:text="请输入问题描述"
            android:textColor="#ff999999"
            android:textSize="15sp" />
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_start_time"
            android:drawablePadding="24dp"
            android:gravity="right|center_vertical"
            android:drawableRight="@mipmap/ic_txt_arrow_down"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="请选择时间"
            android:textColor="@color/titleColor"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_end_time"
            android:drawablePadding="24dp"
            android:gravity="right|center_vertical"
            android:drawableRight="@mipmap/ic_txt_arrow_down"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint=" 请选择时间"
            android:textColor="@color/titleColor"
            android:textSize="15sp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.smallcake.smallutils.text.ShapeTextButton
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="60dp"
        app:stb_solidColor="@color/text_red"
        app:stb_radius="6dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_report"
        android:text="立即报事报修"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>