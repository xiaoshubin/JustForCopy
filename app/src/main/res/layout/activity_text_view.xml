<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TextViewActivity">

    <com.smallcake.temp.weight.ExpandTextView
        android:padding="16dp"
        android:text="8月13日，易中天在其个人微信公众号发布了一篇《七夕不是情人节》的文章，迅速引发网友转评赞。他在文中强调就算有牛郎织女，七夕也不是情人节。并引用唐代诗人林杰的《乞巧》，“七夕今宵看碧霄，牵牛织女渡河桥。家家乞巧望秋月，穿尽红丝几万条”来力证：“对月穿针，是比眼神，也是比手艺。为什么要看牛郎织女？他们是劳动模范啊！”"
        android:id="@+id/expand_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#000000"
        android:textSize="15sp"/>
    <View style="@style/h_line"/>



</androidx.appcompat.widget.LinearLayoutCompat>